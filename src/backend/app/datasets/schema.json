{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Clinic Centers Metadata",
  "description": "Schema definition for Indira IVF Clinic centers stored in JSON file",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "Clinic Name": {
        "type": "string",
        "description": "Name of the clinic branch"
      },
      "Country": {
        "type": "string",
        "description": "Country where clinic is located"
      },
      "State": {
        "type": "string",
        "description": "State where clinic is located"
      },
      "District": {
        "type": "string",
        "description": "District where clinic is located"
      },
      "City": {
        "type": "string",
        "description": "City where clinic is located"
      },
      "Postal": {
        "type": "integer",
        "description": "Postal/Zip code of the clinic"
      },
      "Address": {
        "type": "string",
        "description": "Full address of the clinic"
      },
      "contact": {
        "type": "string",
        "description": "Contact number of the clinic"
      }
    },
    "required": [
      "Clinic Name",
      "Country",
      "State",
      "City",
      "Postal",
      "Address",
      "contact"
    ]
  }
}
